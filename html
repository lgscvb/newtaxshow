<body>
    <div id="root"></div>

    <script type="text/babel">
        // --- React Code Starts Here ---

        const { useState, useEffect, useRef } = React;

        // 主應用程式組件
        const App = () => {
            // 滾動進度狀態
            const [scrollProgress, setScrollProgress] = useState(0);

            // 處理滾動事件以更新進度條
            const handleScroll = () => {
                const totalScroll = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                const currentScroll = window.scrollY;
                const progress = (currentScroll / totalScroll) * 100;
                setScrollProgress(progress);
            };

            useEffect(() => {
                window.addEventListener('scroll', handleScroll);
                return () => window.removeEventListener('scroll', handleScroll);
            }, []);

            return (
                <div className="bg-slate-50 font-noto text-slate-700">
                    {/* 滾動進度指示器 */}
                    <div className="fixed top-0 left-0 w-full h-1.5 bg-slate-200 z-50">
                        <div 
                            className="h-full bg-teal-500 transition-all duration-300 ease-out" 
                            style={{ width: `${scrollProgress}%` }}
                        ></div>
                    </div>

                    <main>
                        <HeroSection />
                        <CrisisAnalysis />
                        <SolutionComparison />
                        <StrategyAnalysis />
                        <TaxCalculator />
                        <GovernmentSubsidy />
                        <ProjectBenefitAnalysis />
                        <TrustMetrics />
                        <ServicePackage />
                        <CallToAction />
                    </main>
                </div>
            );
        };

        // --- 組件區 ---

        // 自定義計數器 Hook
        const useCounter = (end, duration = 1500) => {
            const [count, setCount] = useState(0);
            const ref = useRef(null);
            const isVisible = useOnScreen(ref);

            useEffect(() => {
                if (isVisible) {
                    let start = 0;
                    const increment = Math.ceil(end / (duration / 16)); 
                    const timer = setInterval(() => {
                        start += increment;
                        if (start >= end) {
                            setCount(end);
                            clearInterval(timer);
                        } else {
                            setCount(start);
                        }
                    }, 16);
                    return () => clearInterval(timer);
                }
            }, [end, duration, isVisible]);

            return [count, ref];
        };

        // 觀察元素是否在視窗內的 Hook
        const useOnScreen = (ref) => {
            const [isIntersecting, setIntersecting] = useState(false);

            useEffect(() => {
                const observer = new IntersectionObserver(([entry]) => {
                    if (entry.isIntersecting) {
                        setIntersecting(true);
                        observer.disconnect();
                    }
                });
                const currentRef = ref.current;
                if (currentRef) {
                    observer.observe(currentRef);
                }
                return () => {
                    if (currentRef) {
                       observer.unobserve(currentRef);
                    }
                };
            }, [ref]);

            return isIntersecting;
        };

        // 英雄區塊：震撼開場
        const HeroSection = () => {
            const [annualLoss, annualLossRef] = useCounter(1720000);
            const [fiveYearLoss, fiveYearLossRef] = useCounter(8600000);

            return (
                <section className="min-h-screen bg-cover bg-center text-white flex flex-col justify-center items-center text-center p-8 relative" style={{backgroundImage: "url('https://images.unsplash.com/photo-1508224253954-a69c487215b2?q=80&w=1974&auto=format&fit=crop')"}}>
                    <div className="absolute inset-0" style={{backgroundColor: 'rgba(15, 23, 42, 0.7)'}}></div>
                    <div className="relative z-10 animate-fade-in-up">
                        <h1 className="text-4xl md:text-6xl font-bold mb-4 tracking-wider">隱性稅損危機</h1>
                        <p className="text-xl md:text-2xl text-teal-300 mb-8 font-roboto-mono">您的企業正在面臨潛在的財務挑戰</p>
                        <div className="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                            <div className="bg-white/10 p-6 rounded-lg backdrop-blur-sm border border-white/20">
                                <h2 className="text-lg md:text-xl text-teal-200 mb-2">年度隱性稅損</h2>
                                <p className="text-4xl md:text-6xl font-bold font-roboto-mono text-rose-400">
                                    <span ref={annualLossRef}>{annualLoss.toLocaleString()}</span>
                                    <span className="text-2xl ml-2">元</span>
                                </p>
                            </div>
                            <div className="bg-white/10 p-6 rounded-lg backdrop-blur-sm border border-white/20">
                                <h2 className="text-lg md:text-xl text-teal-200 mb-2">五年累積隱性稅損</h2>
                                <p className="text-4xl md:text-6xl font-bold font-roboto-mono text-rose-500">
                                    <span ref={fiveYearLossRef}>{fiveYearLoss.toLocaleString()}</span>
                                    <span className="text-2xl ml-2">元</span>
                                </p>
                            </div>
                        </div>
                        <p className="mt-8 text-lg text-slate-300 max-w-2xl mx-auto">
                            在沒有專業規劃下，驚人的「隱性稅損」正無聲地侵蝕您企業成長的果實。
                        </p>
                    </div>
                </section>
            );
        };

        // 危機分析：稅率級距跳升視覺化
        const CrisisAnalysis = () => {
            const ref = useRef(null);
            const isVisible = useOnScreen(ref);

            return (
                <section ref={ref} className="py-20 px-6 bg-white">
                    <div className="max-w-4xl mx-auto text-center">
                        <h2 className="text-3xl md:text-4xl font-bold text-slate-800 mb-4">隱性稅損的根源：稅率級距跳升</h2>
                        <p className="text-lg text-slate-600 mb-12">每一個百分點的跳升，都是「隱性稅損」擴大的直接原因，無聲地侵蝕您的企業利潤。</p>
                        <div className="w-full bg-slate-200 rounded-full h-12 p-2 flex items-center relative overflow-hidden">
                            <div
                                className={`absolute top-0 left-0 h-full rounded-full bg-gradient-to-r from-emerald-400 to-amber-400 transition-all duration-1000 ease-out ${isVisible ? 'w-[40%]' : 'w-0'}`}
                            ></div>
                            <div
                                className={`absolute top-0 left-0 h-full rounded-full bg-gradient-to-r from-amber-400 to-rose-500 transition-all duration-1000 ease-out delay-500 ${isVisible ? 'w-[60%]' : 'w-0'}`}
                            ></div>
                            <span className="absolute left-[38%] text-white font-bold z-10 transition-opacity duration-500 delay-700">{isVisible ? '20%' : ''}</span>
                            <span className="absolute left-[58%] text-white font-bold z-10 transition-opacity duration-500 delay-1200">{isVisible ? '30%' : ''}</span>
                            <div className="relative w-full h-full flex items-center justify-between px-4 text-sm font-bold text-slate-700">
                                <span>安全區間</span>
                                <span>高稅負區間</span>
                            </div>
                        </div>
                        <p className="mt-6 text-slate-600">從20%級距躍升至30%級距，意味著您的淨利潤將承受更沉重的稅務負擔，形成巨大的隱性稅損。</p>
                    </div>
                </section>
            );
        };

        // 方案比較
        const SolutionComparison = () => {
            const [selected, setSelected] = useState('unplanned');
            const scenarios = {
                unplanned: { title: '未規劃情境', tax: '172萬', rate: '2.15%', bracket: '30%級距', color: 'rose', formula: '營所稅 (8000萬×6%×20%=96萬) + 綜所稅 (剩餘淨利適用30%級距≈76萬) = 172萬', savings: '-', fiveYear: '累積稅損 284萬' },
                planA: { title: '方案A：公司制', tax: '115.2萬', rate: '1.44%', bracket: '5%級距', color: 'sky', formula: '營所稅 (96萬) + 股利所得 (剩餘淨利適用5%級距≈19.2萬) = 115.2萬', savings: '56.8萬', fiveYear: '284萬' },
                planB: { title: '方案B：多行號制', tax: '24萬', rate: '0.30%', bracket: '5%級距', color: 'emerald', formula: '總稅負 (8000萬×6%×5%=24萬)，透過多行號架構，將淨利直接以5%稅率完稅', savings: '148萬', fiveYear: '740萬' },
            };
            const colors = {
                rose: { text: 'text-rose-600', border: 'border-rose-500' },
                sky: { text: 'text-sky-600', border: 'border-sky-500' },
                emerald: { text: 'text-emerald-600', border: 'border-emerald-500' },
            };
            const currentData = scenarios[selected];
            const currentColor = colors[currentData.color];
            const InfoTooltip = ({ text }) => (
                <div className="group relative inline-block ml-2">
                    <svg xmlns="http://www.w3.org/2000/svg" className="h-4 w-4 text-slate-400 cursor-pointer" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <div className="absolute bottom-full left-1/2 -translate-x-1/2 w-64 mb-2 p-2 text-xs text-white bg-slate-700 rounded-md shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10">{text}</div>
                </div>
            );
            return (
                <section className="py-20 px-6 bg-slate-100">
                    <div className="max-w-6xl mx-auto">
                        <div className="text-center mb-12"><h2 className="text-3xl md:text-4xl font-bold text-slate-800 mb-4">專業規劃 vs 未規劃的驚人差異</h2><p className="text-lg text-slate-600">數據會說話。看見專業稅務規劃如何將潛在的「隱性稅損」轉化為實際資產。</p></div>
                        <div className="hidden md:block">
                             <table className="w-full text-left border-collapse bg-white shadow-md rounded-lg overflow-hidden">
                                <thead><tr className="bg-slate-50"><th className="p-4 border-b-2 border-slate-200 font-bold text-slate-800">項目</th>{Object.values(scenarios).map(s => (<th key={s.title} className={`p-4 border-b-2 border-slate-200 font-bold ${colors[s.color].text}`}>{s.title}</th>))}</tr></thead>
                                <tbody>
                                    <tr className="hover:bg-slate-50"><td className="p-4 border-b border-slate-200 font-semibold text-slate-600">年度稅負</td>{Object.values(scenarios).map(s => <td key={s.title} className={`p-4 border-b border-slate-200 font-roboto-mono font-bold ${colors[s.color].text}`}>{s.tax}</td>)}</tr>
                                    <tr className="hover:bg-slate-50"><td className="p-4 border-b border-slate-200 font-semibold text-slate-600">實質稅率</td>{Object.values(scenarios).map(s => <td key={s.title} className="p-4 border-b border-slate-200 font-roboto-mono">{s.rate}</td>)}</tr>
                                    <tr className="hover:bg-slate-50"><td className="p-4 border-b border-slate-200 font-semibold text-slate-600">綜所稅級距</td>{Object.values(scenarios).map(s => <td key={s.title} className="p-4 border-b border-slate-200">{s.bracket}</td>)}</tr>
                                    <tr className="hover:bg-slate-50"><td className="p-4 border-b border-slate-200 font-semibold text-slate-600">年度節稅效益</td>{Object.values(scenarios).map(s => <td key={s.title} className="p-4 border-b border-slate-200 font-roboto-mono">{s.savings}</td>)}</tr>
                                     <tr className="hover:bg-slate-50"><td className="p-4 border-b border-slate-200 font-semibold text-slate-600">五年累積效益</td>{Object.values(scenarios).map(s => <td key={s.title} className="p-4 border-b border-slate-200 font-roboto-mono">{s.fiveYear}</td>)}</tr>
                                </tbody>
                            </table>
                        </div>
                        <div className="md:hidden">
                            <div className="flex justify-center mb-6 border-b border-slate-300">{Object.keys(scenarios).map(key => (<button key={key} onClick={() => setSelected(key)} className={`flex-1 p-3 text-sm font-bold transition-colors ${selected === key ? `${colors[scenarios[key].color].text} border-b-2 ${colors[scenarios[key].color].border}` : 'text-slate-500'}`}>{scenarios[key].title}</button>))}</div>
                            <div className={`bg-white p-6 rounded-lg shadow-lg border-t-4 ${currentColor.border}`}>
                                <div className="space-y-4">{[{ label: '年度稅負', value: currentData.tax, color: currentColor.text }, { label: '實質稅率', value: currentData.rate }, { label: '綜所稅級距', value: currentData.bracket }, { label: '年度節稅效益', value: currentData.savings }, { label: '五年累積效益', value: currentData.fiveYear }].map(item => (<div key={item.label} className="flex justify-between items-center text-sm"><span className="font-semibold text-slate-600">{item.label}</span><span className={`font-bold font-roboto-mono ${item.color || 'text-slate-800'}`}>{item.value}</span></div>))}</div>
                                <div className="mt-6 pt-4 border-t border-slate-200"><h4 className="font-semibold text-slate-600 mb-2 flex items-center">計算邏輯<InfoTooltip text={currentData.formula} /></h4><p className="text-xs text-slate-500 bg-slate-50 p-3 rounded font-roboto-mono">{currentData.formula}</p></div>
                            </div>
                        </div>
                    </div>
                </section>
            );
        };
        
        // 方案選擇策略分析
        const StrategyAnalysis = () => {
            const StrategyCard = ({ title, titleColor, borderColor, mainMetricLabel, mainMetricValue, mainMetricColor, points, formula }) => {
                const icons = {
                    advantage: (<svg className="h-6 w-6 text-sky-500 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>),
                    disadvantage: (<svg className="h-6 w-6 text-amber-500 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>)
                };
                return (
                    <div className={`bg-white rounded-lg shadow-lg p-8 border-t-4 ${borderColor} flex flex-col`}>
                        <h3 className={`text-2xl font-bold mb-4 ${titleColor}`}>{title}</h3>
                        <div className="mb-6"><p className="font-semibold text-slate-500">{mainMetricLabel}</p><p className={`text-2xl font-bold ${mainMetricColor} font-roboto-mono`}>{mainMetricValue}</p></div>
                        <div className="flex-grow"><p className="font-semibold text-slate-500 mb-2">關鍵分析</p><ul className="space-y-3">{points.map((point, i) => (<li key={i} className="flex items-start">{icons[point.type]}<span>{point.text}</span></li>))}</ul></div>
                        {formula && (<div className="mt-6 pt-4 border-t border-slate-200"><h4 className="font-semibold text-slate-500 mb-2">計算公式</h4><div className="text-sm text-slate-600 bg-slate-50 p-3 rounded font-roboto-mono space-y-1">{formula.map((line, i) => <p key={i}>{line}</p>)}</div></div>)}
                    </div>
                );
            };
            const strategies = {
                unplanned: { title: "未規劃情境", titleColor: "text-rose-600", borderColor: "border-rose-500", mainMetricLabel: "年度稅務影響", mainMetricValue: "隱性稅損 172萬", mainMetricColor: "text-rose-600", points: [{ text: "稅率級距跳升：淨利潤直接落入30%最高稅率級距。", type: 'disadvantage' }, { text: "利潤侵蝕：企業成長的果實被高額稅負無聲地侵蝕。", type: 'disadvantage' }, { text: "機會成本：損失的稅金本可用於再投資或擴張。", type: 'disadvantage' }, { text: "無限責任風險：若為獨資行號，個人資產將直接承擔營業風險。", type: 'disadvantage' }], formula: ['營所稅：8,000萬 × 6% × 20% = 96萬', '個人綜所稅：384萬適用30%級距 = 76萬', '總稅負：96萬 + 76萬 = 172萬'] },
                planA: { title: "方案A：公司制架構", titleColor: "text-sky-600", borderColor: "border-sky-500", mainMetricLabel: "年度節稅效益", mainMetricValue: "56.8萬元", mainMetricColor: "text-emerald-600", points: [{ text: '風險控管：有限責任制，將營業風險控制在公司資本範圍內。', type: 'advantage' }, { text: '金融往來：銀行授信評估較有利，利於營運資金與設備貸款。', type: 'advantage' }, { text: '興櫃準備：完整治理架構為未來資本市場發展奠定基礎。', type: 'advantage' }, { text: '補助申請：多數大型補助項目偏好公司法人申請。', type: 'advantage' }], formula: ['營所稅：8,000萬 × 6% × 20% = 96萬', '實質稅賦：384萬 × 5% = 19.2萬', '總稅負：96萬 + 19.2萬 = 115.2萬'] },
                planB: { title: "方案B：多行號制架構", titleColor: "text-emerald-600", borderColor: "border-emerald-500", mainMetricLabel: "年度節稅效益", mainMetricValue: "148萬元", mainMetricColor: "text-emerald-600", points: [{ text: '無限責任：食品業涉及消費者安全，個人資產承擔無限連帶責任。', type: 'disadvantage' }, { text: '合規要求：須落實人員、採購、倉儲、發票、資金五鏈實質分工。', type: 'disadvantage' }, { text: '治理限制：欠缺完整公司治理架構，不利未來興櫃規劃。', type: 'disadvantage' }], formula: ['總稅負：8,000萬 × 6% × 5% = 24萬', '說明：多行號架構，直接適用5%級距，避免營所稅。'] }
            };
            return (
                <section className="py-20 px-6 bg-white"><div className="max-w-7xl mx-auto"><div className="text-center mb-12"><h2 className="text-3xl md:text-4xl font-bold text-slate-800 mb-4">方案選擇策略分析</h2><p className="text-lg text-slate-600">B方案節稅最多，但A方案為長期發展鋪路。選擇，取決於您的戰略目標。</p></div><div className="grid lg:grid-cols-3 gap-8 items-stretch"><StrategyCard {...strategies.unplanned} /><StrategyCard {...strategies.planA} /><StrategyCard {...strategies.planB} /></div><p className="mt-12 text-center text-xl text-slate-700 font-semibold">關鍵決策：這筆可避免的稅負，是留在稅局，還是留在企業的發展資金池？</p></div></section>
            );
        };

        // 簡化版稅負計算器
        const TaxCalculator = () => {
            const [revenue, setRevenue] = useState(80000000);
            const [taxLoss, setTaxLoss] = useState(0);
            useEffect(() => {
                const parsedRevenue = parseFloat(revenue) || 0;
                if (parsedRevenue > 0) { const loss = (parsedRevenue * 0.06 * 0.3) - (parsedRevenue * 0.06 * 0.05); setTaxLoss(loss > 0 ? loss : 0); } else { setTaxLoss(0); }
            }, [revenue]);
            return (
                <section className="py-20 px-6 bg-slate-100"><div className="max-w-3xl mx-auto text-center"><h2 className="text-3xl md:text-4xl font-bold text-slate-800 mb-4">您的隱性稅損試算</h2><p className="text-lg text-slate-600 mb-8">輸入您的預估年營收，了解潛在的「隱性稅損」規模。</p><div className="bg-white p-8 rounded-lg shadow-inner"><div className="mb-4"><label htmlFor="revenue" className="block text-lg font-medium text-slate-700 mb-2">年營收 (元)</label><input id="revenue" type="number" value={revenue} onChange={(e) => setRevenue(e.target.value)} className="w-full max-w-sm mx-auto text-2xl font-roboto-mono text-center p-3 border-2 border-slate-300 rounded-lg focus:ring-teal-500 focus:border-teal-500 transition" placeholder="請輸入年營收" /></div><div className="mt-6"><p className="text-lg text-slate-600">預估年度隱性稅損約為：</p><p className="text-4xl md:text-5xl font-bold text-rose-600 font-roboto-mono my-2">{taxLoss.toLocaleString(undefined, { maximumFractionDigits: 0 })} 元</p><p className="text-xs text-slate-500 mt-2 font-roboto-mono">計算公式: (營收 × 6% × 30%) - (營收 × 6% × 5%)</p></div></div><p className="text-sm text-slate-500 mt-4">*此為簡化估算，實際稅負需依個案詳細規劃為準。</p></div></section>
            );
        };
        
