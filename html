    <style>
        /* Custom Font Family */
        body {
            font-family: 'Noto Sans TC', sans-serif;
        }
        .font-noto {
            font-family: 'Noto Sans TC', sans-serif;
        }
        .font-roboto-mono {
            font-family: 'Roboto Mono', monospace;
        }
        
        /* Custom Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .animate-fade-in-up {
            animation: fadeInUp 1s ease-out forwards;
